<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/borde"
    android:padding="10dp"
    >

    <TextView
        android:id="@+id/idTituloN"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:minWidth="150dp"

        android:padding="10dp"

        android:text="titulo"
        app:layout_constraintLeft_toRightOf="@+id/idImagenN"
        app:layout_constraintTop_toBottomOf="@id/idFechaN"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="14dp"
        />

    <ImageView
        android:id="@+id/idImagenN"
        android:layout_width="200dp"
        android:layout_height="130dp"
        android:textSize="14dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idFechaN"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/idFechaN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="fecha"
        android:textSize="14dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/idAutor" />

    <TextView
        android:id="@+id/idAutor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="pagina"
        android:textSize="14dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>